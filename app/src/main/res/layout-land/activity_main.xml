<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_one_00"
            android:textColor="#3F51B5"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/txtViewPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_two_00"
            android:textColor="#3F51B5"
            android:textSize="25sp"
            android:layout_below="@+id/txtViewPlayer1" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:text="@string/reset_game2"
            app:backgroundTint="#2F6FA3"
            android:layout_toStartOf="@+id/txtViewPlayer1"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3sp"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED" />
        <Button
            android:id="@+id/btn01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
        <Button
            android:id="@+id/btn02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
        <Button
            android:id="@+id/btn11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
        <Button
            android:id="@+id/btn12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
        <Button
            android:id="@+id/btn21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
        <Button
            android:id="@+id/btn22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp"
            app:backgroundTint="#63B0ED"
            android:layout_margin="3sp"/>
    </LinearLayout>


</LinearLayout>